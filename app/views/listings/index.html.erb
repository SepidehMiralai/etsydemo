
<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image, :size=> "200x150"), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %> </p>
            <p><%= "Ad by #{listing.user.name}" %> </p>     
            <br>    
            <% if (user_signed_in? && current_user==listing.user) %>
              <%= link_to 'Edit', edit_listing_path(listing) %>
              <%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path %>
<% end %>
