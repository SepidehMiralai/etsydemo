<div class="jumbotron"
  <h1> Handcraft items from around the world </h1>
  <h2> Discover one-of-a-kind-items </h2>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image, :size=> "200x150"), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %> </p>
            <p><%= "Ad by #{listing.user.name}" %> </p>        
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>
<% if user_signed_in? %>
  <%= link_to 'Add a new listing', new_listing_path, {:style=>'font-size: large;'} %>
  <br>
<% end %>

