<p id="notice"><%= notice %></p>
<%= image_tag(@listing.image, :size=> "200x150") if @listing.image.attached? %>
<h3>
  
  <%= @listing.name %>
</h3>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @listing.price %>
</p>

<% if current_user == @listing.user %>
  <%= link_to 'Edit', edit_listing_path(@listing) %> 
<% end %>
<%= link_to 'Back', listings_path %>
